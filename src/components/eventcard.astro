---
const { details } = Astro.props;
---

<div class="flex flex-col justconify-center align-center gap-5 max-w-md">
  <div>
    <img
      src={details.src}
      alt="event"
      class="w-full h-full object-cover rounded-md hover:-translate-y-3 duration-500"
    />
  </div>
  <div>
    <h2 class="text-4xl font-semibold text-gray-700">{details.title}</h2>
    <p class="text-gray-600 leading-6 mt-2">{details.description}</p>
  </div>
</div>

