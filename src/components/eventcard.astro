---
import Link from "@components/ui/link.astro";
import { Icon } from "astro-icon";

const { details } = Astro.props;
---

<div class="flex flex-col justify-start max-w-md gap-10 grow">
    <img
      src={details.src}
      alt="event"
      width="100%"
      class="w-96 max-h-96 object-cover rounded-md hover:-translate-y-3 duration-500"
      aspect-ratio="1:1"
    />
  <div class="flex flex-col gap-10 flex-start">
  <div>
    <h2 class="text-4xl font-semibold text-gray-700">{details.title}</h2>
    <p class="text-gray-600 leading-6 mt-2 ">{details.description}</p>
  </div>
  <div class="flex justify-start items-center gap-4">
    <Icon class="text-brand-600 w-9 h-9" name="mdi:date-range" />
    <p>{details.date}</p>
  </div>
    {details.link?
        <Link 
    href={details.link}
    size="lg"
    class="bg-brand-600 border-none outline-none hover:bg-brand">View More</Link>:
    <Link 
    disabled
    href="#"
    size="lg"
    class="bg-brand-400 border-none outline-none hover:bg-brand-200">View More</Link>}
  </div>
</div>

