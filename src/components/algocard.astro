---
import Link from "./ui/link.astro";
import { Icon } from "astro-icon";
const { details, index } = Astro.props;
---

<div
  class={`flex flex-col-reverse ${
    (index + 1) % 2 === 0 ? "md:flex-row-reverse" : "md:flex-row"
  } justify-center gap-5 lg:gap-12`}>
  <div
    class="flex flex-col justify-center align-center gap-3 md:gap-6 w-full max-w-xl">
    <p class="text-4xl text-brand-600 font-semibold">
      {details.title}
    </p>
    <p class="text-gray-600">
      {details.description}
    </p>
    <div class="flex justify-start items-center gap-4">
      <Icon class="text-brand-600 w-9 h-9" name="mdi:date-range" />
      <p>{details.date}</p>
    </div>
    <Link target="_blank" href={details.link} size="md" class={"bg-brand-600 hover:bg-brand w-2/4"}>
      Watch Now
    </Link>
  </div>
  <div class="w-full max-w-md flex justify-center aspect-square">
    <img
      src={details.src}
      alt={details.title}
      class="w-full h-full object-cover rounded-md hover:-translate-y-3 duration-500"
    />
  </div>
</div>
